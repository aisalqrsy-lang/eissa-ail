                    </div>
                    
                    <div class="form-group">
                        <label for="subject" class="form-label">موضوع الرسالة</label>
                        <input type="text" id="subject" class="form-control" required placeholder="موضوع الرسالة أو المشروع">
                    </div>
                    
                    <div class="form-group">
                        <label for="message" class="form-label">نص الرسالة</label>
                        <textarea id="message" class="form-control" required placeholder="اكتب رسالتك هنا بالتفصيل..."></textarea>
                    </div>
                    
                    <!-- جديد: اختيار نوع المشروع -->
                    <div class="form-group">
                        <label for="projectType" class="form-label">نوع المشروع</label>
                        <select id="projectType" class="form-control">
                            <option value="">اختر نوع المشروع</option>
                            <option value="web">تطبيق ويب</option>
                            <option value="mobile">تطبيق جوال</option>
                            <option value="ecommerce">متجر إلكتروني</option>
                            <option value="design">تصميم واجهات</option>
                            <option value="other">أخرى</option>
                        </select>
                    </div>
                    
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        إرسال الرسالة الآن
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- الفوتر -->
    <footer>
        <div class="footer-content">
            <div class="footer-logo">عيسى <span>الضراسي</span></div>
            
            <div class="footer-links">
                <a href="#home">الصفحة الرئيسية</a>
                <a href="#about">معلومات عني</a>
                <a href="#works">معرض الأعمال</a>
                <a href="#contact">تواصل معي</a>
            </div>
            
            <!-- جديد: صندوق الأخبار -->
            <div class="newsletter" style="max-width: 600px; margin: 3rem auto;">
                <h3 style="font-size: 1.8rem; margin-bottom: 1.5rem; color: var(--text-primary);">اشترك في النشرة البريدية</h3>
                <div style="display: flex; gap: 1rem;">
                    <input type="email" placeholder="بريدك الإلكتروني" style="flex: 1; padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid var(--glass-border); border-radius: 8px; color: var(--text-primary); font-family: 'Almarai', sans-serif;">
                    <button style="background: var(--gradient-primary); color: var(--primary-dark); border: none; padding: 0 2rem; border-radius: 8px; font-weight: bold; cursor: pointer; transition: var(--transition);" onmouseover="this.style.transform='translateY(-3px)'" onmouseout="this.style.transform='translateY(0)'">
                        اشترك
                    </button>
                </div>
            </div>
            
            <p class="copyright">© <span id="currentYear">2023</span> جميع الحقوق محفوظة | تم التصميم والتطوير والبرمجة بواسطة <strong>عيسى الضراسي</strong> باستخدام أحدث تقنيات وتقنيات الويب الحديثة. هذا الموقع يعمل على جميع الأجهزة والمتصفحات.</p>
        </div>
    </footer>

    <!-- جديد: نافذة حجز الموعد -->
    <div id="appointmentModal" style="display: none; position: fixed; top: 0; right: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 10000; backdrop-filter: blur(10px);">
        <div style="background: var(--card-bg); max-width: 500px; margin: 100px auto; padding: 3rem; border-radius: var(--border-radius); border: 1px solid var(--glass-border); position: relative;">
            <button onclick="document.getElementById('appointmentModal').style.display='none'" style="position: absolute; left: 20px; top: 20px; background: transparent; border: none; color: var(--accent-primary); font-size: 1.5rem; cursor: pointer;">
                <i class="fas fa-times"></i>
            </button>
            <h3 style="font-size: 2rem; margin-bottom: 2rem; color: var(--accent-primary); font-family: 'El Messiri', sans-serif;">حجز موعد استشارة</h3>
            <p style="color: var(--text-tertiary); margin-bottom: 2rem;">اختر الوقت المناسب لك وسأتواصل معك لتأكيد الموعد</p>
            <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                <input type="date" style="padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid var(--glass-border); border-radius: 8px; color: var(--text-primary); font-family: 'Almarai', sans-serif;">
                <input type="time" style="padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid var(--glass-border); border-radius: 8px; color: var(--text-primary); font-family: 'Almarai', sans-serif;">
                <textarea placeholder="الغرض من الاستشارة..." style="padding: 1rem; background: rgba(255,255,255,0.1); border: 1px solid var(--glass-border); border-radius: 8px; color: var(--text-primary); font-family: 'Almarai', sans-serif; min-height: 100px;"></textarea>
                <button style="background: var(--gradient-primary); color: var(--primary-dark); border: none; padding: 1rem 2rem; border-radius: 8px; font-weight: bold; cursor: pointer; transition: var(--transition);" onmouseover="this.style.transform='translateY(-3px)'" onmouseout="this.style.transform='translateY(0)'">
                    <i class="fas fa-calendar-check"></i> تأكيد الحجز
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script>
        // تأثير الكتابة المتلاحقة
        const typingText = document.querySelector('.typing-text');
        const texts = ['محترف', 'مبتكر', 'مبدع', 'شغوف', 'مطور', 'مصمم', 'متميز'];
        let textIndex = 0;
        let charIndex = 0;
        let isDeleting = false;
        let typingSpeed = 100;

        function type() {
            const currentText = texts[textIndex];
            
            if (isDeleting) {
                typingText.textContent = currentText.substring(0, charIndex - 1);
                charIndex--;
                typingSpeed = 60;
            } else {
                typingText.textContent = currentText.substring(0, charIndex + 1);
                charIndex++;
                typingSpeed = 130;
            }
            
            if (!isDeleting && charIndex === currentText.length) {
                isDeleting = true;
                typingSpeed = 1800;
                setTimeout(type, typingSpeed);
            } else if (isDeleting && charIndex === 0) {
                isDeleting = false;
                textIndex = (textIndex + 1) % texts.length;
                typingSpeed = 600;
                setTimeout(type, typingSpeed);
            } else {
                setTimeout(type, typingSpeed);
            }
        }

        // إنشاء جسيمات متحركة
        function createParticles() {
            const container = document.getElementById('particles');
            const particleCount = 100;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // خصائص عشوائية
                const size = Math.random() * 4 + 1;
                const left = Math.random() * 100;
                const delay = Math.random() * 20;
                const duration = Math.random() * 10 + 20;
                const colorIndex = Math.floor(Math.random() * 3);
                const colors = ['rgba(0, 217, 255, 0.5)', 'rgba(157, 78, 221, 0.5)', 'rgba(255, 107, 107, 0.5)'];
                
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${left}%`;
                particle.style.background = colors[colorIndex];
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;
                
                container.appendChild(particle);
            }
        }

        // تحديث الوقت الحقيقي
        function updateLiveTime() {
            const now = new Date();
            const options = {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                timeZone: 'Asia/Aden'
            };
            
            const timeString = now.toLocaleDateString('ar-YE', options);
            document.getElementById('liveTime').textContent = timeString;
        }

        // مخطط المهارات المتحرك
        function animateSkillBars() {
            const skillLevels = document.querySelectorAll('.skill-level');
            skillLevels.forEach(level => {
                const percent = level.getAttribute('data-percent');
                level.style.width = `${percent}%`;
            });
        }

        // مساعد صوتي
        function setupVoiceAssistant() {
            const voiceBtn = document.getElementById('voiceAssistant');
            const recognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            
            if (recognition) {
                const speechRecognition = new recognition();
                speechRecognition.lang = 'ar-SA';
                
                voiceBtn.addEventListener('click', () => {
                    if (!voiceBtn.classList.contains('listening')) {
                        voiceBtn.classList.add('listening');
                        voiceBtn.innerHTML = '<i class="fas fa-microphone-slash"></i>';
                        speechRecognition.start();
                        
                        // توقف تلقائي بعد 10 ثواني
                        setTimeout(() => {
                            if (voiceBtn.classList.contains('listening')) {
                                voiceBtn.classList.remove('listening');
                                voiceBtn.innerHTML = '<i class="fas fa-microphone"></i>';
                                speechRecognition.stop();
                            }
                        }, 10000);
                    } else {
                        voiceBtn.classList.remove('listening');
                        voiceBtn.innerHTML = '<i class="fas fa-microphone"></i>';
                        speechRecognition.stop();
                    }
                });
                
                speechRecognition.onresult = (event) => {
                    const transcript = event.results[0][0].transcript.toLowerCase();
                    handleVoiceCommand(transcript);
                };
                
                speechRecognition.onend = () => {
                    voiceBtn.classList.remove('listening');
                    voiceBtn.innerHTML = '<i class="fas fa-microphone"></i>';
                };
            } else {
                voiceBtn.style.display = 'none';
            }
        }

        function handleVoiceCommand(command) {
            if (command.includes('الرئيسية') || command.includes('home')) {
                window.location.hash = '#home';
            } else if (command.includes('عني') || command.includes('about')) {
                window.location.hash = '#about';
            } else if (command.includes('أعمال') || command.includes('works')) {
                window.location.hash = '#works';
            } else if (command.includes('اتصل') || command.includes('contact')) {
                window.location.hash = '#contact';
            } else if (command.includes('سيرة') || command.includes('cv')) {
                document.getElementById('downloadCV').click();
            } else {
                alert(`لا أفهم الأمر: "${command}". حاول: "اذهب إلى الرئيسية" أو "اذهب إلى أعمالي"`);
            }
        }

        // تغيير الثيم
        function setupThemeToggle() {
            const themeToggle = document.getElementById('themeToggle');
            let isDark = true;
            
            themeToggle.addEventListener('click', () => {
                const root = document.documentElement;
                
                if (isDark) {
                    // ثيم فاتح
                    root.style.setProperty('--primary-dark', '#f0f7ff');
                    root.style.setProperty('--secondary-dark', '#dbeafe');
                    root.style.setProperty('--text-primary', '#0a192f');
                    root.style.setProperty('--text-secondary', '#1e3a8a');
                    root.style.setProperty('--text-tertiary', '#475569');
                    root.style.setProperty('--card-bg', 'rgba(255, 255, 255, 0.85)');
                    root.style.setProperty('--glass-bg', 'rgba(255, 255, 255, 0.6)');
                    themeToggle.innerHTML = '<i class="fas fa-moon"></i> الثيم الداكن';
                } else {
                    // ثيم داكن
                    root.style.setProperty('--primary-dark', '#0a192f');
                    root.style.setProperty('--secondary-dark', '#0f2547');
                    root.style.setProperty('--text-primary', '#f0f7ff');
                    root.style.setProperty('--text-secondary', '#c3d7ff');
                    root.style.setProperty('--text-tertiary', '#8fa3d9');
                    root.style.setProperty('--card-bg', 'rgba(15, 37, 71, 0.85)');
                    root.style.setProperty('--glass-bg', 'rgba(15, 37, 71, 0.6)');
                    themeToggle.innerHTML = '<i class="fas fa-palette"></i> تغيير الثيم';
                }
                
                isDark = !isDark;
            });
        }

        // بدء التأثيرات بعد تحميل الصفحة
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(type, 800);
            createParticles();
            updateLiveTime();
            setInterval(updateLiveTime, 1000);
            
            // تحديث السنة الحالية في الفوتر
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            
            // إعداد المساعد الصوتي
            setupVoiceAssistant();
            
            // إعداد تبديل الثيم
            setupThemeToggle();
            
            // تأثير الهيدر عند التمرير
            const header = document.getElementById('header');
            const backToTop = document.querySelector('.back-to-top');
            const progressBar = document.querySelector('.progress-bar');
            
            window.addEventListener('scroll', () => {
                // تأثير الهيدر
                if (window.scrollY > 150) {
                    header.classList.add('scrolled');
                    backToTop.classList.add('visible');
                } else {
                    header.classList.remove('scrolled');
                    backToTop.classList.remove('visible');
                }
                
                // شريط التقدم
                const windowHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                const scrolled = (window.scrollY / windowHeight) * 100;
                progressBar.style.width = scrolled + '%';
                
                // إضافة تأثير fade-in للعناصر عند التمرير
                const fadeElements = document.querySelectorAll('.fade-in');
                fadeElements.forEach(element => {
                    const elementTop = element.getBoundingClientRect().top;
                    const elementVisible = 200;
                    
                    if (elementTop < window.innerHeight - elementVisible) {
                        element.style.opacity = "1";
                        element.style.transform = "translateY(0) scale(1)";
                        
                        // تفعيل مخطط المهارات عند ظهوره
                        if (element.querySelector('.skill-level')) {
                            animateSkillBars();
                        }
                    }
                });
                
                // تحديث الروابط النشطة في القائمة
                const sections = document.querySelectorAll('section');
                const navLinks = document.querySelectorAll('.navigation a');
                
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionHeight = section.clientHeight;
                    if (scrollY >= (sectionTop - 250)) {
                        current = section.getAttribute('id');
                    }
                });
                
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === `#${current}`) {
                        link.classList.add('active');
                    }
                });
            });
            
            // إرسال نموذج التواصل
            const contactForm = document.getElementById('contactForm');
            contactForm.addEventListener('submit', (e) => {
                e.preventDefault();
                
                // محاكاة إرسال النموذج
                const submitBtn = contactForm.querySelector('.submit-btn');
                const originalText = submitBtn.innerHTML;
                
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري إرسال رسالتك...';
                submitBtn.disabled = true;
                
                // محاكاة تأخير الشبكة
                setTimeout(() => {
                    // رسالة نجاح وهمية
                    submitBtn.innerHTML = '<i class="fas fa-check"></i> تم إرسال رسالتك بنجاح!';
                    submitBtn.style.background = 'rgba(46, 204, 113, 0.15)';
                    submitBtn.style.borderColor = '#2ecc71';
                    submitBtn.style.color = '#2ecc71';
                    
                    // إعادة تعيين النموذج
                    contactForm.reset();
                    
                    // استعادة الزر بعد 4 ثوان
                    setTimeout(() => {
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        submitBtn.style.background = '';
                        submitBtn.style.borderColor = '';
                        submitBtn.style.color = '';
                        
                        // إظهار رسالة نجاح
                        alert('شكراً لك! تم استلام رسالتك بنجاح وسأرد عليك في أقرب وقت ممكن.');
                    }, 4000);
                }, 2500);
            });
            
            // زر تحميل السيرة الذاتية
            const downloadCV = document.getElementById('downloadCV');
            downloadCV.addEventListener('click', (e) => {
                e.preventDefault();
                
                // محاكاة عملية التحميل
                const originalText = downloadCV.innerHTML;
                downloadCV.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';
                downloadCV.disabled = true;
                
                setTimeout(() => {
                    downloadCV.innerHTML = '<i class="fas fa-check"></i> تم البدء بالتحميل';
                    downloadCV.style.background = 'rgba(46, 204, 113, 0.15)';
                    downloadCV.style.borderColor = '#2ecc71';
                    downloadCV.style.color = '#2ecc71';
                    
                    // في حالة حقيقية، هنا سيتم تنزيل الملف
                    alert('شكراً لاهتمامك! ستبدأ عملية تحميل سيرتي الذاتية قريباً. في حالة عدم بدء التحميل تلقائياً، يرجى التواصل معي عبر البريد الإلكتروني.');
                    
                    // استعادة الزر بعد 3 ثوان
                    setTimeout(() => {
                        downloadCV.innerHTML = originalText;
                        downloadCV.disabled = false;
                        downloadCV.style.background = '';
                        downloadCV.style.borderColor = '';
                        downloadCV.style.color = '';
                    }, 3000);
                }, 1500);
            });
            
            // حجز موعد
            const bookAppointment = document.getElementById('bookAppointment');
            if (bookAppointment) {
                bookAppointment.addEventListener('click', () => {
                    document.getElementById('appointmentModal').style.display = 'block';
                });
            }
            
            // القائمة المتنقلة
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const navigation = document.querySelector('.navigation');
            
            mobileMenuBtn.addEventListener('click', () => {
                navigation.classList.toggle('active');
                mobileMenuBtn.innerHTML = navigation.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
                    
                // تأثير على زر القائمة
                if (navigation.classList.contains('active')) {
                    mobileMenuBtn.style.background = 'rgba(0, 217, 255, 0.15)';
                    mobileMenuBtn.style.borderColor = 'var(--accent-primary)';
                    mobileMenuBtn.style.color = 'var(--accent-primary)';
                    mobileMenuBtn.style.boxShadow = '0 10px 25px rgba(0, 217, 255, 0.3)';
                } else {
                    mobileMenuBtn.style.background = 'rgba(0, 217, 255, 0.08)';
                    mobileMenuBtn.style.borderColor = 'var(--glass-border)';
                    mobileMenuBtn.style.color = 'var(--text-primary)';
                    mobileMenuBtn.style.boxShadow = 'none';
                }
            });
            
            // إغلاق القائمة عند النقر على رابط
            const navLinks = document.querySelectorAll('.navigation a');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth <= 992) {
                        navigation.classList.remove('active');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                        mobileMenuBtn.style.background = 'rgba(0, 217, 255, 0.08)';
                        mobileMenuBtn.style.borderColor = 'var(--glass-border)';
                        mobileMenuBtn.style.color = 'var(--text-primary)';
                        mobileMenuBtn.style.boxShadow = 'none';
                    }
                });
            });
            
            // إغلاق القائمة عند النقر خارجها
            document.addEventListener('click', (e) => {
                if (!navigation.contains(e.target) && !mobileMenuBtn.contains(e.target) && window.innerWidth <= 992) {
                    navigation.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                    mobileMenuBtn.style.background = 'rgba(0, 217, 255, 0.08)';
                    mobileMenuBtn.style.borderColor = 'var(--glass-border)';
                    mobileMenuBtn.style.color = 'var(--text-primary)';
                    mobileMenuBtn.style.boxShadow = 'none';
                }
            });
            
            // تهيئة تأثيرات fade-in للعناصر
            const fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach(element => {
                element.style.opacity = "0";
                element.style.transform = "translateY(50px) scale(0.95)";
                element.style.transition = "opacity 1s ease, transform 1s ease";
            });
            
            // تشغيل تأثيرات fade-in عند التحميل الأولي
            setTimeout(() => {
                window.dispatchEvent(new Event('scroll'));
            }, 400);
            
            // تأثيرات إضافية عند تحميل الصفحة
            setTimeout(() => {
                document.body.style.overflow = 'auto';
            }, 1000);
            
            // تفعيل مخطط المهارات عند التحميل
            animateSkillBars();
        });

        // تأثيرات إضافية للمساعد الصوتي
        function speak(text) {
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = 'ar-SA';
                utterance.rate = 1;
                speechSynthesis.speak(utterance);
            }
        }
    </script>
</body>
</html>
